<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlImage"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x300"
    android:layout_margin="@dimen/_4sdp"
    app:corner_radius="@dimen/_12sdp">

        <com.ingic.lmslawyer.util.RoundCornersImageView
            android:id="@+id/imgview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/gray_dark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/share" />

                <ImageView
                    android:id="@+id/btnFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/fav" />

        </LinearLayout>



        <TextView
            android:id="@+id/tvTitle"
            style="@style/textview_smallest_gray_style"
            android:layout_above="@id/tvDateTime"
            android:fontFamily="@font/bold"
            android:maxLines="3"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/lorem_ipsum_3_lines"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tvDateTime"
            style="@style/textview_smallest_gray_style"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:singleLine="true"
            android:text="11:aa AM | 23 Jun 2018"
            android:textColor="@color/dirty_white"
            android:textSize="@dimen/_8sdp" />

</com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>