<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.ingic.lmslawyer.fragments.login.MainLoginFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="220dip"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingEnd="-12dp"
                android:src="@drawable/signup_logo" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_gravity="bottom"
                app:layout_scrollFlags="scroll|enterAlways"
                app:tabBackground="@drawable/selector_tabs"
                app:tabIndicatorColor="@null"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="@color/unselected_tab_color" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@color/login_divider" />
        </FrameLayout>
        <!--  <android.support.design.widget.TabLayout
              android:id="@+id/home_tabLayout"
              android:layout_width="match_parent"
              android:layout_height="48dip"
              app:tabGravity="fill"
              app:tabIndicatorColor="@color/colorOrange"
              app:tabMode="fixed"
              app:tabSelectedTextColor="@color/white"
              app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
              app:tabTextColor="@color/white"
              app:layout_scrollFlags="scroll|enterAlways"/>
      -->
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topLayout"
            android:background="@color/white"
            tools:context=".MainActivity"
            />
    </RelativeLayout>
</ScrollView>
