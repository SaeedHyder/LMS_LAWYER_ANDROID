<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_tag"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x8"
        android:layout_marginStart="@dimen/x5"
        android:layout_marginEnd="@dimen/x5"
        android:orientation="horizontal"
        >

        <com.ingic.lmslawyer.ui.views.AnyTextView
            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arab World"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/x6"
            android:paddingEnd="@dimen/x12"
            android:paddingStart="@dimen/x12"
            android:paddingTop="@dimen/x6"
            android:textSize="@dimen/x13"
            app:typeface="@string/font_roboto" />


    </LinearLayout>


</RelativeLayout>