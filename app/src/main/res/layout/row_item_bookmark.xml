<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundshapelayout"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <com.ingic.lmslawyer.util.RoundCornersImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:scaleType="centerCrop"
            android:src="@drawable/women" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileImage"
            android:layout_alignTop="@+id/profileImage"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_toEndOf="@id/profileImage"
            android:layout_weight="0.9"
            android:gravity="start"
            android:orientation="vertical">

            <com.ingic.lmslawyer.ui.views.AnyTextView
                android:id="@+id/txtName"
                style="@style/textview_large_dark_gray_style"
                app:typeface="@string/font_roboto"
                tools:text="John Glen" />

            <com.ingic.lmslawyer.ui.views.AnyTextView
                android:id="@+id/tvDateTime"
                android:singleLine="true"
                android:text="11:aa AM | 23 Jun 2018"
                style="@style/textview_gray_style"
                app:typeface="@string/font_roboto"/>

            <com.ingic.lmslawyer.ui.views.AnyTextView
                android:id="@+id/tvDetail"
                android:singleLine="true"
                android:text="@string/lorem_ipsum"
                style="@style/textview_gray_style"
                app:typeface="@string/font_roboto"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/profileImage"
            android:gravity="end">

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"

                android:src="@drawable/share_red"/>
            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/x10"
                android:src="@drawable/ic_delete"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>