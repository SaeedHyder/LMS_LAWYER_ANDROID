<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">

    <com.ingic.lmslawyer.util.RoundCornersImageView
        android:id="@+id/imgview"
        android:layout_width="@dimen/_82sdp"
        android:layout_height="@dimen/_80sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/p1" />

    <TextView
        android:id="@+id/tvDocType"
        style="@style/textview_14size_gray_style"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_toRightOf="@id/imgview"
        android:text="Photos" />

    <TextView
        android:id="@+id/tvDocNumbers"
        style="@style/textview_14size_gray_style"
        android:layout_alignStart="@+id/tvDocType"
        android:layout_below="@+id/tvDocType"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="15"
        android:textColor="@color/inputEditTextColor"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>