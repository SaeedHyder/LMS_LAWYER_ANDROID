<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp"
    >
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_logo" />

        <com.ingic.lmslawyer.ui.views.AnyTextView
            android:id="@+id/txtNotification"
            style="@style/textview_12size_gray_style"
            android:layout_marginLeft="@dimen/x10"
            android:text="@string/lorem_ipsum_small"
            app:typeface="@string/font_roboto"
            />


    </LinearLayout>

    <com.ingic.lmslawyer.ui.views.AnyTextView
        android:id="@+id/txtDate"
        style="@style/textview_gray_style"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textLayout"
        android:layout_marginLeft="@dimen/x10"
        android:text="02 Mar 2018"
        app:typeface="@string/font_roboto" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/txtDate"
        android:layout_marginTop="@dimen/x8"
        android:background="@color/light_grey"/>

</RelativeLayout>