<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.ingic.lmslawyer.fragments.login.MainLoginFragment">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabBackground="@drawable/cases_selector_tabs"
            app:tabIndicatorColor="@null"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/inputEditTextHintColor"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/inputEditTextHintColor" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@color/gray_dark"
            />
    </RelativeLayout>
    <!--  <android.support.design.widget.TabLayout
          android:id="@+id/home_tabLayout"
          android:layout_width="match_parent"
          android:layout_height="48dip"
          app:tabGravity="fill"
          app:tabIndicatorColor="@color/colorOrange"
          app:tabMode="fixed"
          app:tabSelectedTextColor="@color/white"
          app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
          app:tabTextColor="@color/white"
          app:layout_scrollFlags="scroll|enterAlways"/>
  -->
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        tools:context=".MainActivity"
        />
</RelativeLayout>
