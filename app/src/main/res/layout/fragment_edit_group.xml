<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fillViewport="true"
    tools:context="com.ingic.lmslawyer.fragments.Case.EditGroupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_24sdp"
            tools:visibility="visible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/stroke_grey_circle"
                android:padding="@dimen/_3sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/CaseImage"
                    android:layout_width="@dimen/x140"
                    android:layout_height="@dimen/x140"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/p8" />

                <ImageView
                    android:id="@+id/imgViewCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="2dp"
                    android:src="@drawable/ic_camerawithcircle" />
            </FrameLayout>


            <com.ingic.lmslawyer.ui.views.AnyEditTextView
                android:id="@+id/tvCaseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/transparent"
                android:drawableEnd="@drawable/ic_edit"
                android:drawablePadding="@dimen/_6sdp"
                android:maxLength="30"
                android:singleLine="true"
                android:text="Whiteny Case"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/_12sdp"
                android:theme="@style/FloatingLabel"
                app:typeface="@string/font_roboto" />

            <View
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/rlheadingsText"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tvMembers"
                style="@style/textview_grey_my_case_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/case_members_john_galin_cavin_brend_amp_albert_chris" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTop"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:background="@drawable/recent_case_detail_box"
                android:orientation="vertical"
                android:padding="@dimen/_24sdp"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:id="@+id/llSearchBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:background="@drawable/home_searchbaar"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.ingic.lmslawyer.ui.views.AnyEditTextView
                        android:id="@+id/etSearch"
                        style="@style/editText_medium_gray_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:hint="@string/search"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/FloatingLabel"
                        app:typeface="@string/font_roboto" />

                    <ImageView
                        android:id="@+id/imgSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:padding="8dp"
                        android:src="@drawable/ic_home_search" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSearchList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llSearchBar"
                    android:layout_marginBottom="@dimen/_30sdp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnLeaveGroup"
                style="@style/maroon_button_style_less_width"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:text="@string/leave_group" />

        </FrameLayout>
    </LinearLayout>

</ScrollView>
