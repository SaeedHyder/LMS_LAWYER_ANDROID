<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.ingic.lmslawyer.fragments.Case.CaseDescriptionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_24sdp"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp">

        <LinearLayout
            android:id="@+id/llheadings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/seperator"
            android:layout_alignTop="@+id/rlheadingsText"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                style="@style/textview_grey_my_case_style"
                android:fontFamily="@font/bold"
                android:text="User Name:" />

            <TextView
                style="@style/textview_grey_my_case_style"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:gravity="right"
                android:text="Subject:" />

            <TextView
                style="@style/textview_grey_my_case_style"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:gravity="right"
                android:text="Case Description:" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlheadingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llheadings"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLawyerName"
                style="@style/textview_grey_my_case_style"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/tvDateTime"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Philpe Gibson" />

            <TextView
                android:id="@+id/tvDateTime"
                style="@style/textview_grey_my_case_style"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:fontFamily="@font/light"
                android:text="12:30 pm | 12 Sep 2017"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tvSubject"
                style="@style/textview_grey_my_case_style"
                android:layout_below="@id/tvLawyerName"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="right"
                android:text="Filing Case" />

            <TextView
                android:id="@+id/tvCaseDesc"
                style="@style/textview_grey_my_case_style"
                android:layout_below="@id/tvSubject"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/lorem_ipsum_small"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/rlheadingsText"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tvCaseMemberHeading"
            style="@style/textview_grey_my_case_style"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/seperator"
            android:layout_marginRight="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/bold"
            android:singleLine="true"
            android:text="Case Members:" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCaseMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seperator"
            android:layout_marginTop="@dimen/_minus4sdp"
            android:layout_toRightOf="@id/tvCaseMemberHeading" />

        <TextView
            android:id="@+id/tvAddMore"
            style="@style/textview_smallest_gray_style"
            android:layout_above="@+id/seperator1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/stroke_grey_rounded"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_13sdp"
            android:paddingRight="@dimen/_13sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="Add More"
            android:visibility="gone" />

        <View
            android:id="@+id/seperator1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/rvCaseMembers"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/btnPayment"
            style="@style/maroon_button_style"
            android:layout_height="@dimen/_55sdp"
            android:layout_below="@id/seperator1"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/payment"
            tools:visibility="gone" />
        <!--
                <Button
                    android:id="@+id/btnMarkAsComplete"
                    style="@style/maroon_stroke_button_style"
                    android:layout_below="@id/btnPayment"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/mark_as_complete"
                    android:visibility="gone"
                    tools:visibility="gone" />-->
        <Button
            android:id="@+id/btnAcknowledge"
            style="@style/maroon_stroke_button_style"
            android:layout_below="@id/seperator1"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/acknowledge_to_complete"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>
</ScrollView>
