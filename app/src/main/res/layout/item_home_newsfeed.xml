<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/bg_rounded_white"
    android:orientation="horizontal"
    android:padding="@dimen/_8sdp">

    <com.ingic.lmslawyer.util.RoundCornersImageView
        android:id="@+id/imgview"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        tools:src="@drawable/p7"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tvName"
        style="@style/textview_grey_medium_bold_style"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_toRightOf="@id/imgview"
        android:singleLine="true"
        tools:text="Unitech Case of...."
        android:textSize="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/tvTime"
        style="@style/textview_light_grey_medium_bold_style"
        android:layout_alignStart="@+id/tvName"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="@dimen/_2sdp"
        tools:text="23 min ago"
        android:textColor="@color/dirty_white"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tvDesc"
        style="@style/textview_light_grey_medium_bold_style"
        android:layout_alignBottom="@id/imgview"
        android:layout_alignStart="@+id/tvTime"
        android:layout_below="@+id/tvTime"
        android:layout_marginTop="@dimen/_2sdp"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        tools:text="@string/lorem_ipsum_3_lines"
        android:textSize="@dimen/_10sdp" />

</RelativeLayout>