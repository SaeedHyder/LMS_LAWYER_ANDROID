<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/rrlPhotos"
        android:layout_width="@dimen/_82sdp"
        android:layout_height="@dimen/_80sdp"
        app:corner_radius="10dp"
        >

        <ImageView
            android:id="@+id/imgview1"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:scaleType="fitXY"
            android:src="@drawable/p3" />

        <ImageView
            android:id="@+id/imgview2"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"

            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/p4" />

        <ImageView
            android:id="@+id/imgview3"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/p2" />

        <ImageView
            android:id="@+id/imgview4"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/p5" />

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


    <TextView
        android:id="@+id/tvDocType"
        style="@style/textview_14size_gray_style"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_toRightOf="@id/rrlPhotos"
        android:text="Photos" />

    <TextView
        android:id="@+id/tvDocNumbers"
        style="@style/textview_14size_gray_style"
        android:layout_alignStart="@+id/tvDocType"
        android:layout_below="@+id/tvDocType"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/inputEditTextColor"
        android:text="15"
        android:layout_marginTop="@dimen/_4sdp"/>

</RelativeLayout>