<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.ingic.lmslawyer.fragments.login.LMSLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_50sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:paddingTop="@dimen/_30sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">

            <FrameLayout
                android:id="@+id/flProfilePicture"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
               android:layout_centerInParent="true"
                android:background="@drawable/stroke_maroon_circle">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgviewProfile"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_maroon"
                    android:src="@drawable/placeholder_image" />

                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile_camera" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ingic.lmslawyer.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/case_win"
                        android:textColor="@color/app_green"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_roboto" />

                    <com.ingic.lmslawyer.ui.views.AnyTextView
                        android:id="@+id/txt_win_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/app_green"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_roboto" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="end"
                    android:orientation="vertical">

                    <com.ingic.lmslawyer.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/case_lose"
                        android:textColor="@color/forgot_pass_color"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_roboto" />

                    <com.ingic.lmslawyer.ui.views.AnyTextView
                        android:id="@+id/txt_lose_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginEnd="@dimen/x23"
                        android:textColor="@color/forgot_pass_color"
                        android:textSize="@dimen/x16"
                        app:typeface="@string/font_roboto" />


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:theme="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietFulName"
                style="@style/inputEditText"
                android:hint="@string/full_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:theme="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietEmail"
                style="@style/inputEditText"
                android:enabled="false"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:theme="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietMobile"
                style="@style/inputEditText"
                android:digits="+0123456789"
                android:hint="@string/phone_number"
                android:imeOptions="actionNext"
                android:inputType="phone" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:theme="@style/FloatingLabel"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietLocation"
                style="@style/inputEditText"
                android:hint="@string/location"
                android:imeOptions="actionNext"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <com.ingic.lmslawyer.ui.views.AutoCompleteLocation
            android:id="@+id/txt_autoCompleteLocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/inputEditTextColor"
            android:textSize="@dimen/x14"
            android:visibility="visible"
            app:typeface="@string/font_roboto" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@color/grey" />

        <!-- <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
