            </android.support.design.widget.TextInputLayout>-->
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginTop="@dimen/x5"
            android:theme="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietAward"
                style="@style/inputEditText"
                android:hint="Award"
                android:imeOptions="actionNext"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


        <RelativeLayout
            android:id="@+id/expLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:gravity="start"
            android:orientation="vertical">

            <com.ingic.lmslawyer.ui.views.AnyTextView
                android:id="@+id/txtExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"

                android:hint="Experience"
                android:theme="@style/FloatingLabel"
                app:typeface="@string/font_roboto" />


            <Spinner
                android:id="@+id/spinnerExp"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_below="@id/txtExp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_below="@id/spinnerExp"
                android:layout_marginTop="@dimen/x3"
                android:background="@drawable/line">

            </View>

