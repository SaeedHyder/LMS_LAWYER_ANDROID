                     android:src="@drawable/ic_downarow"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="@dimen/x10"
                     />-->
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02" />

            <RelativeLayout
                android:id="@+id/affiliationLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:layout_weight="0.49"
                android:gravity="end"
                android:orientation="vertical">

                <com.ingic.lmslawyer.ui.views.AnyTextView
                    android:id="@+id/txtAffiliation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="Affiliation"
                    android:theme="@style/FloatingLabel"
                    app:typeface="@string/font_roboto" />


                <Spinner
                    android:id="@+id/spinnerAffiliation"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_below="@id/txtAffiliation" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/line" />

                <!-- <ImageView

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_downarow"
