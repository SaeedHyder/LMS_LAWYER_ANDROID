            <RelativeLayout
                android:id="@+id/rateLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:layout_weight="0.49"
                android:gravity="start"
                android:orientation="vertical">

                <com.ingic.lmslawyer.ui.views.AnyTextView
                    android:id="@+id/txtFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="Fees"
                    android:theme="@style/FloatingLabel"
                    android:visibility="visible"
                    app:typeface="@string/font_roboto" />

                <Spinner
                    android:id="@+id/spinnerRates"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_below="@id/txtFees" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:gravity="center"
                    android:theme="@style/FloatingLabel"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ietFees"
                        style="@style/inputEditText"
                        android:cursorVisible="false"
                        android:digits="0123456789"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:hint="Fees"
                        android:imeOptions="actionNext"
                        android:inputType="phone" />


                </android.support.design.widget.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/line" />

                <!-- <ImageView

                     android:layout_width="wrap_content"
