<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_margin="@dimen/x15"
        android:orientation="horizontal">


        <com.ingic.lmslawyer.ui.views.AnyEditTextView
            android:id="@+id/edtSearch"
            style="@style/form_edttext_fields_style"
            android:background="@drawable/maroon_rounded_border"
            android:drawableLeft="@drawable/icn_search"
            android:hint="@string/search"
            app:emptyAllowed="false"
            app:typeface="@string/font_roboto" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/light_grey">

    </View>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/white"
        android:divider="@null">

    </ListView>

</LinearLayout>