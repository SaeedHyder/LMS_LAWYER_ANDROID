<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/x30">

        <FrameLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x30">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/seprator_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_circle_1"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />

                <View
                    android:id="@+id/v_circle_2"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x50"
                    android:background="@drawable/circle" />

                <View
                    android:id="@+id/v_circle_3"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x50"
                    android:background="@drawable/circle" />

                <View
                    android:id="@+id/v_circle_4"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x50"
                    android:background="@drawable/circle1" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/budgetLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:orientation="vertical">

                <TextView
                    style="@style/textview_maroon_medium_regular_style"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x20"
                    android:text="@string/best"

                    />

                <LinearLayout
                    android:id="@+id/layoutBestLawyer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/textview_grey_medium_regular_style"
                            android:layout_gravity="left"
                            android:layout_weight="0.5"
                            android:text="$41,000" />


                        <TextView
                            style="@style/textview_grey_medium_regular_style"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="$100,000" />


                    </LinearLayout>


                </LinearLayout>

                <SeekBar
                    android:id="@+id/sbBest"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:max="10"
                    android:progress="4"
                    android:progressBackgroundTint="@color/gray_dark"
                    android:progressTint="@color/gray_dark"
                    android:thumb="@drawable/ic_redcircle"

                    />


                <TextView
                    style="@style/textview_maroon_medium_regular_style"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:text="@string/medium" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_grey_medium_regular_style"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="$21,000" />

                    <TextView
                        style="@style/textview_grey_medium_regular_style"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="$40,000" />


                </LinearLayout>

                <SeekBar
                    android:id="@+id/sbMedium"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:clickable="false"
                    android:max="10"
                    android:progress="5"
                    android:progressBackgroundTint="@color/gray_dark"
                    android:progressTint="@color/gray_dark"
                    android:thumb="@drawable/ic_redcircle"
                    />


                <TextView
                    style="@style/textview_maroon_medium_regular_style"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:text="@string/newly"

                    />

                <LinearLayout
                    android:id="@+id/layoutNewlyLawyer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textview_grey_medium_regular_style"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:text="$0,000" />


                        <TextView
                            style="@style/textview_grey_medium_regular_style"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="$20,000" />


                    </LinearLayout>


                </LinearLayout>


                <SeekBar
                    android:id="@+id/sbNewExp"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:max="10"
                    android:progress="1"
                    android:progressBackgroundTint="@color/gray_dark"
                    android:progressTint="@color/gray_dark"
                    android:thumb="@drawable/ic_redcircle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x30"
                android:orientation="vertical">


                <TextView

                    style="@style/textview_maroon_medium_regular_style"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="@string/budget" />

                <!-- <SeekBar
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:thumbTint="@color/app_maroon"
                     android:progressTint="@null"
                     android:progressBackgroundTint="@null"
                     style="@style/Widget.AppCompat.SeekBar"
                     />-->

                <!-- <com.app.justice.ui.views.RangeSeekBar
                    android:id="@+id/priceSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:internalPadding="@dimen/x30"
                    app:absoluteMaxValue="90000"
                    app:absoluteMinValue="20000"
                    app:activateOnDefaultValues="false"
                    app:activeColor="@color/app_light_brown"
                    app:alwaysActive="true"
                    app:barHeight="@dimen/x7"
                    app:defaultColor="@color/app_brown"
                    app:showLabels="false"
                    app:singleThumb="true"
                    app:textAboveThumbsColor="@color/black"
                    app:valuesAboveThumbs="true"></com.app.justice.ui.views.RangeSeekBar>
-->
                <!-- <org.florescu.android.rangeseekbar.RangeSeekBar
                     android:id="@+id/priceSeekBar"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     rsb:absoluteMaxValue="90000"
                     rsb:absoluteMinValue="20000"
                     rsb:thumbDisabled="@drawable/range_thumb"
                     rsb:thumbNormal="@drawable/range_thumb"
                     rsb:thumbPressed="@drawable/range_thumb"
                     app:singleThumb="true"
                     app:activeColor="@color/app_light_brown"
                     app:defaultColor="@color/app_brown"
                     app:showLabels="false"
                     rsb:valuesAboveThumbs="true"
                     />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.ingic.lmslawyer.ui.views.AnyTextView
                            style="@style/textview_smallest_gray_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Initial Budget"
                            app:typeface="@string/font_roboto" />

                        <TextView
                            style="@style/textview_grey_medium_regular_style"
                            android:layout_weight="1"
                            android:text="$0" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <com.ingic.lmslawyer.ui.views.AnyTextView
                            style="@style/textview_smallest_gray_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximum Budget"
                            app:typeface="@string/font_roboto" />

                        <TextView
                            style="@style/textview_grey_medium_regular_style"
                            android:text="$100,000" />
                    </LinearLayout>


                </LinearLayout>

                <SeekBar
                    android:id="@+id/sbBudgetRange"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:max="2000"
                    android:progress="5"
                    android:progressBackgroundTint="@color/gray_dark"
                    android:progressTint="@color/gray_dark"
                    android:thumb="@drawable/ic_redcircle" />


            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                style="@style/maroon_button_style_less_width"
                android:layout_alignParentBottom="true"
                android:text="@string/submit" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>