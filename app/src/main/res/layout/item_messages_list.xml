<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_14sdp"
    android:paddingBottom="@dimen/_10sdp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgview"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/dummy_image"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvName"
        style="@style/textview_grey_medium_regular_style"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="John"
        app:layout_constraintStart_toEndOf="@+id/imgview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvMsgDesc"
        style="@style/textview_grey_my_case_style"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/lorem_ipsum_small"
        app:layout_constraintStart_toEndOf="@+id/imgview"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvDateTime"
        style="@style/textview_smallest_gray_style"
        android:layout_marginTop="12dp"
        android:text="2 Mar 2018 | 12:00 pm"
        android:textColor="@color/inputEditTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMsgDesc"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>