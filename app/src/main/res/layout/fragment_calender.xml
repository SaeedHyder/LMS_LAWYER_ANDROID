<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.ingic.lmslawyer.fragments.Case.CalenderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTotalCalenderEvent"
            style="@style/textview_14size_gray_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnCreateNewEvent"
            style="@style/maroon_button_style_less_width"
            android:text="@string/create_new_event"
            android:textAllCaps="true"
            android:visibility="visible" />

        <FrameLayout
            style="@style/calender_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/calender_box">

            <CalendarView
                android:id="@+id/calenderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/appTheme"
                android:visibility="gone"/>

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                app:mcv_showOtherDates="all"
                app:mcv_selectionColor="@color/app_maroon"
                app:mcv_tileSize="@dimen/_33sdp"

                />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPerDayAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
