<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fieldLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x20">

            <ImageView
                android:id="@+id/icnCheck"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"

                android:src="@drawable/circle1"
                />

            <com.ingic.lmslawyer.ui.views.AnyTextView
                android:id="@+id/txtCategory"
                style="@style/editText_gray_style"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x10"
                android:text="@string/filter_spec"

                android:textColor="@color/field_hint_gray"
                android:textSize="@dimen/x15"
                app:emptyAllowed="false"
                app:typeface="@string/font_roboto" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/seprator_gray">

        </View>
    </LinearLayout>


</LinearLayout>