<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/logoLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x180"
            android:background="@color/pink">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />


            <ImageView
                android:id="@+id/imgCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x50"
                android:src="@drawable/icn_cross" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            >

            <com.ingic.lmslawyer.ui.views.AnyTextView

                style="@style/textview_maroon_large_style"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x30"
                android:text="@string/filter_category"
                app:typeface="@string/font_roboto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/light_grey"
                >

            </View>

            <ListView
                android:id="@id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"

                android:divider="@null"
                >

            </ListView>

            <Button
                android:id="@+id/btnSubmit"
                style="@style/maroon_rounded_button_style"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:text="@string/submit" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>