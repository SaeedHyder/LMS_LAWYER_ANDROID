<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ingic.lmslawyer.fragments.Case.FilterLawyerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:hint="@string/name"
            android:textColorHint="@color/inputEditTextHintColor"
            app:hintTextAppearance="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietName"
                style="@style/inputGrayEditText"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:hint="Specialization"
            android:textColorHint="@color/inputEditTextHintColor"
            app:hintTextAppearance="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietSpecialization"
                style="@style/inputGrayEditText"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:hint="Experience"
            android:textColorHint="@color/inputEditTextHintColor"
            app:hintTextAppearance="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietExperience"
                style="@style/inputGrayEditText"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:hint="Education"
            android:textColorHint="@color/inputEditTextHintColor"
            app:hintTextAppearance="@style/FloatingLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ietEducation"
                style="@style/inputGrayEditText"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>
<!--

        <com.app.justice.ui.views.CustomRatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:starOn="3"

            />
-->

        <com.ingic.lmslawyer.ui.views.CustomRatingBar
            android:id="@+id/rb_serviceRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_2sdp"
            app:maxStars="5"
            app:starOff="@drawable/star_unselected"
            app:starOn="@drawable/star_selected"
            app:starPadding="4dp"
            app:stars="3"
            />

        <Button
            android:id="@+id/btnSubmit"
            style="@style/maroon_button_style_less_width"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/submit" />

    </LinearLayout>
</ScrollView>
